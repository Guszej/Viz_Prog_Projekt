<Page x:Class="MainPage.AddGamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AddGamePage">

    <Grid Background="#1e1e1e" Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Background="#2e2e2e">
            <TextBlock Text="Játék hozzáadása" FontSize="24" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Név" Foreground="White"/>
            <TextBox x:Name="txtNev" Margin="0,5,0,10"/>

            <TextBlock Text="Megjelenés (év)" Foreground="White"/>
            <TextBox x:Name="txtMegjelenes" Margin="0,5,0,10"/>

            <TextBlock Text="Készítő" Foreground="White"/>
            <TextBox x:Name="txtKeszito" Margin="0,5,0,10"/>

            <TextBlock Text="Típus" Foreground="White"/>
            <TextBox x:Name="txtTipus" Margin="0,5,0,10"/>

            <TextBlock Text="Platform" Foreground="White"/>
            <TextBox x:Name="txtPlatform" Margin="0,5,0,10"/>

            <TextBlock Text="Mód" Foreground="White"/>
            <TextBox x:Name="txtMod" Margin="0,5,0,10"/>

            <TextBlock Text="Értékelés" Foreground="White"/>
            <TextBox x:Name="txtertek" Margin="0,5,0,10"/>

            <Button Content="Játék mentése" Click="Mentes_Click" Height="30" Background="Green" Foreground="White"/>
        </StackPanel>
    </Grid>
</Page>