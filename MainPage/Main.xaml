<Page x:Class="MainPage.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MainPage"
      mc:Ignorable="d"
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Main">

    <Grid>
        <Label Content="Játékaink"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               FontSize="30"
               Foreground="White" />

        <Button x:Name="bttnBack"
                Content="Vissza"
                Click="GoBack"
                Height="30"
                Width="70"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10" />

        <DataGrid Height="900"
                  Width="1600"
                  x:Name="GameDataGrid"
                  MouseDoubleClick="GameInfoTable_MouseDoubleClick"
                  ColumnWidth="200"
                  CanUserResizeColumns="False"
                  CanUserReorderColumns="False"
                  CanUserAddRows="False"
                  AlternatingRowBackground="DarkGray"
                  Background="Transparent"
                  BorderThickness="0"
                  AutoGenerateColumns="False"
                  IsReadOnly="False"
                  Margin="0,50,0,0">

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Kép" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding KepUtvonal}" Width="100" Height="100" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="200" IsReadOnly="True"/>
                <DataGridTextColumn Header="Név" Binding="{Binding Név}" Width="200" IsReadOnly="True"/>
                <DataGridTextColumn Header="Megjelenés" Binding="{Binding Megjelenés}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Készítő" Binding="{Binding Készítő}" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn Header="Típus" Binding="{Binding Típus}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Platform" Binding="{Binding Platform}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Mód" Binding="{Binding Mód}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="G_Értékelés" Binding="{Binding GÉrtékelés}" Width="80" IsReadOnly="True"/>

                <!-- Szerkeszthető Értékelés mező -->
                <DataGridTemplateColumn Header="Értékelés" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Értékelés}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Értékelés, Mode=TwoWay}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="bttnExit"
                Content="X"
                FontSize="20"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Width="40"
                Height="40"
                Click="bttnExit_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Red"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Page>