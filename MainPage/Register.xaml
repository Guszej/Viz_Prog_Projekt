<Window x:Class="MainPage.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainPage"
        mc:Ignorable="d"
        Title="Register" Height="420" Width="380">
    <Grid>
        <Label Content="Regisztráció" HorizontalAlignment="Center" FontSize="25" Margin="0,0,0,10"/>
        <Label Content="Felhasználónév:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" Margin="10,66,0,0"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Center" Margin="0,95,0,0" VerticalAlignment="Top" Width="330" Height="25" TextWrapping="Wrap"/>
        <Label Content="Email cím:" HorizontalAlignment="Left" FontSize="14" Margin="10,120,0,10" Width="79"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Center" Margin="0,146,0,0" VerticalAlignment="Top" Width="330" Height="25" TextWrapping="Wrap"/>
        <Label Content="Jelszó:" HorizontalAlignment="Left" Margin="10,171,0,0" VerticalAlignment="Top" Width="94" Height="26" FontSize="14"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="330" Height="25" Margin="0,197,0,0"/>
        <Label Content="Jelszó megerősítése:" HorizontalAlignment="Left" Margin="10,222,0,0" VerticalAlignment="Top" Width="158" FontSize="14"/>
        <TextBox x:Name="txtPassword2" HorizontalAlignment="Center" Margin="0,251,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="330" Height="25"/>
        <Button x:Name="bttnReg" Content="Regszitráció" Click="bttnReg_Click" Height="30" Width="100" VerticalAlignment="Bottom" Margin="0,0,0,50"/>
    </Grid>
</Window>
