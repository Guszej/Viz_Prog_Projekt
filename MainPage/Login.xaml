<Window x:Class="MainPage.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainPage"
        mc:Ignorable="d"
        Title="Login" Height="420" Width="380">
    <Grid>
        <Label Content="Belépés" HorizontalAlignment="Center" Height="50" Margin="0,10,0,0" VerticalAlignment="Top" Width="100" FontSize="25"/>
        <Label Content="Felhasználónév:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" Margin="10,91,0,0"/>
        <TextBox x:Name="lgUser" HorizontalAlignment="Center" Margin="0,125,0,0" VerticalAlignment="Top" Width="330" Height="25" TextWrapping="Wrap" TextChanged="lgUser_TextChanged"/>
        <Label Content="Jelszó:" HorizontalAlignment="Left" Margin="10,155,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="lgPWD" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="330" Height="25" Margin="0,186,0,0" TextChanged="lgPWD_TextChanged"/>
        <Button Content="Belépés" HorizontalAlignment="Center" Margin="0,250,0,0" VerticalAlignment="Top" Height="30" Width="100" Click="Button_Click"/>
    </Grid>
</Window>
