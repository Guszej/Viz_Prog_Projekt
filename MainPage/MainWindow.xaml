<Window x:Class="MainPage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainPage"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Login" HorizontalAlignment="Center" Height="50" Margin="0,60,0,0" VerticalAlignment="Top" 
        Width="150" Click="btLogin"/>
        <Button Content="Guest" HorizontalAlignment="Center" Margin="0,130,0,0" VerticalAlignment="Top" 
        Height="50" Width="150" Click="btGuest"/>
        <Button Content="Register" HorizontalAlignment="Center" Height="50" Margin="0,217,0,0" VerticalAlignment="Top" 
        Width="150" Click="btReg"/>
    </Grid>
</Window>
